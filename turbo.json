{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env",
    ".env.*",
    "**/.env",
    "**/.env.*",
    "**/tsconfig.json",
    "**/tsconfig.build.json"
  ],
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "cli": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
