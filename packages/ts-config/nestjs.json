{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Nestjs",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "lib": ["esnext", "DOM", "ScriptHost", "WebWorker"],
    "module": "CommonJS",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
